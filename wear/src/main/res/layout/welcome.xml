    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <com.cisco.wear_on.ui.CircleImageView
            xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@drawable/pic_smart1"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            imagecontrol:border_inside_color="#fff7f2e9"
            imagecontrol:border_outside_color="#ffd5d1c8"
            imagecontrol:border_thickness="1dp"
            />

        <android.support.wearable.view.DelayedConfirmationView
            android:id="@+id/delayed_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:circle_border_color="@color/massive_bright_green"
            app:circle_border_width="2dp"
            app:circle_radius="40dp">

        </android.support.wearable.view.DelayedConfirmationView>
    </RelativeLayout>
